generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                String       @id @default(cuid())
  name              String
  email             String       @unique
  username          String       @unique
  password          String
  avatar            String?
  verificationCode  Int    ?
  verified          Boolean      @default(false)
  boards            Board[]
  userDetails       UserDetails? @relation("UserUserDetails")
  timestamp         DateTime     @default(now())
}

model UserDetails {
  userId            String       @id
  user              User         @relation("UserUserDetails", fields: [userId], references: [id])
  firstName         String
  lastName          String
  dob               DateTime?
  gender            String?
  bio               String?
  phoneNumber       String?
  imageUrl          String?
  address           String?
  occupation        String?
  company           String?
  jobTitle          String?
  socials           String[]
  website           String?
  timestamp         DateTime     @default(now())
}

model Board {
  id                String       @id @default(cuid())
  userId            String
  user              User         @relation(fields: [userId], references: [id])
  description       String
  title             String
  link              String?
  image             String?
  boardColor        String
  tags              String[]
  feedbacks         Feedback[]
  timestamp         DateTime     @default(now())
}

model Feedback {
  id            String       @id @default(cuid())
  boardId       String
  board         Board        @relation(fields: [boardId], references: [id])
  username      String
  email         String?
  rating        Float
  comment       String
  timestamp     DateTime     @default(now())
}
