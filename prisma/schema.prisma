generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(cuid())
  name              String
  email             String    @unique
  username          String    @unique
  password          String
  imageUrl          String
  verification      Boolean
  boards            Board[]
  userDetails       userDetails @relation(fields: [id], references: [userId])
  timestamp         DateTime @default(now())
}
model userDetails{
  id            String @id @default(cuid())
  userId        String
  bio            String
  jobTitle       String 
  location       String
  website        String
  github         String
  linkedin       String
  twitter        String
  skills         String[]
  interests      String[]
  experience     String[]
  education      String[]
  timestamp      DateTime @default(now())
}


//Boards
model Board {
  id            String   @id @default(cuid())
  User          User     @relation(fields: [userId], references: [id])
  userId        String
  description   String
  title         String
  link          String
  image         String
  tags          String[]
  Feedbacks     Feedback[]
  timestamp     DateTime @default(now())
}

//baords feedback

model Feedback{
  id            String   @id @default(cuid())
  boardId       Board    @relation(fields: [id], references: [id])
  Username      String
  Rating        Float
  comment       String
  timestamp     DateTime @default(now())
}



